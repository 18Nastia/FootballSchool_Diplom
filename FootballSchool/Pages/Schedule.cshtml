<script>
    function switchView(viewType) {
        // Update toggle buttons
        document.querySelectorAll('.toggle-btn').forEach(btn => {
            btn.classList.remove('active');
        });
        event.target.classList.add('active');

        // Show/hide views
        if (viewType === 'week') {
            document.getElementById('weekView').classList.add('active');
            document.getElementById('dayView').classList.remove('active');
        } else {
            document.getElementById('weekView').classList.remove('active');
            document.getElementById('dayView').classList.add('active');
        }
    }

    function addTraining() {
        // Здесь будет логика добавления новой тренировки
        alert('Форма добавления тренировки будет открыта');
    }

    function updateSchedule() {
        // Здесь будет логика обновления расписания по фильтрам
        console.log('Расписание обновлено по выбранным фильтрам');
    }

    // Обработка кликов по событиям для просмотра деталей
    document.querySelectorAll('.event').forEach(event => {
        event.addEventListener('click', function() {
            const eventTitle = this.querySelector('.event-title').textContent;
            alert(`Детали тренировки: ${eventTitle}`);
        });
    });

    // Инициализация при загрузке
    document.addEventListener('DOMContentLoaded', function() {
        // Устанавливаем текущую дату в заголовок дня
        const today = new Date();
        const options = { weekday: 'long', day: 'numeric', month: 'long' };
        const dateString = today.toLocaleDateString('ru-RU', options);
        document.querySelector('.date-header').textContent = dateString;
    });
</script>