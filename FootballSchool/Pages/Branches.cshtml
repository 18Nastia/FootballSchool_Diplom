<script>
    function openBranchDetails(branchId) {
        const sidebar = document.getElementById('branchSidebar');
        const mainContent = document.getElementById('mainContent');
        const overlay = document.getElementById('overlay');

        sidebar.classList.add('active');
        mainContent.classList.add('with-sidebar');
        overlay.classList.add('active');

        // Здесь можно загрузить данные филиала по branchId
        console.log('Opening branch details for ID:', branchId);

        // Обновляем информацию в сайдбаре в зависимости от выбранного филиала
        updateBranchInfo(branchId);
    }

    function updateBranchInfo(branchId) {
        // В реальном приложении здесь был бы AJAX запрос для загрузки данных
        const branchTitles = {
            1: 'Футбольная школа "Чемпион" - Центр',
            2: 'Футбольная школа "Чемпион" - Запад',
            3: 'Футбольная школа "Чемпион" - Юг',
            4: 'Футбольная школа "Чемпион" - Север',
            5: 'Футбольная школа "Чемпион" - Восток',
            6: 'Футбольная школа "Чемпион" - Олимпийский'
        };

        const branchDetails = document.querySelector('.branch-details h3');
        if (branchDetails && branchTitles[branchId]) {
            branchDetails.textContent = branchTitles[branchId];
        }
    }

    function closeBranchDetails() {
        const sidebar = document.getElementById('branchSidebar');
        const mainContent = document.getElementById('mainContent');
        const overlay = document.getElementById('overlay');

        sidebar.classList.remove('active');
        mainContent.classList.remove('with-sidebar');
        overlay.classList.remove('active');
    }

    // Закрытие по клику на overlay
    document.getElementById('overlay').addEventListener('click', closeBranchDetails);

    // Закрытие по ESC
    document.addEventListener('keydown', function(event) {
        if (event.key === 'Escape') {
            closeBranchDetails();
        }
    });

    // Обработка кликов по табам
    document.querySelectorAll('.tab').forEach(tab => {
        tab.addEventListener('click', function() {
            document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
            this.classList.add('active');
        });
    });
</script>