</div>

@section Scripts {
    <script>
        // Данные тренеров (в реальном приложении эти данные будут приходить с сервера)
        const coachesData = {
            1: {
                name: "Алексей Смирнов",
                initials: "АС",
                status: "free",
                statusText: "Свободен",
                experience: "7 лет",
                qualification: "Мастер спорта, сертифицированный тренер",
                email: "alexey@example.com",
                phone: "+7 (999) 123-45-67",
                groups: [
                    { name: "Кроссфит начинающие", details: "12 участников • Пн,Ср, Пт 18:00" },
                    { name: "Силовые тренировки", details: "8 участников • Вт, Чт 19:30" }
                ]
            },
            2: {
                name: "Елена Петрова",
                initials: "ЕП",
                status: "busy",
                statusText: "Занят",
                experience: "5 лет",
                qualification: "Кандидат в мастера спорта, специалист по детскому футболу",
                email: "elena@example.com",
                phone: "+7 (999) 234-56-78",
                groups: [
                    { name: "Детская группа U10", details: "15 участников • Пн,Ср, Пт 16:00" },
                    { name: "Техника владения мячом", details: "10 участников • Вт, Чт 17:30" }
                ]
            },
            3: {
                name: "Николай Волков",
                initials: "НВ",
                status: "free",
                statusText: "Свободен",
                experience: "10 лет",
                qualification: "Заслуженный тренер, эксперт по тактике",
                email: "nikolay@example.com",
                phone: "+7 (999) 345-67-89",
                groups: [
                    { name: "Тактическая подготовка", details: "6 участников • Пн,Чт 19:00" },
                    { name: "Вратарское искусство", details: "4 участника • Ср, Пт 18:30" }
                ]
            },
            4: {
                name: "Мария Соколова",
                initials: "МС",
                status: "busy",
                statusText: "Занят",
                experience: "8 лет",
                qualification: "Специалист по физической подготовке, нутрициолог",
                email: "maria@example.com",
                phone: "+7 (999) 456-78-90",
                groups: [
                    { name: "Функциональный тренинг", details: "14 участников • Пн,Ср, Пт 19:00" },
                    { name: "Йога для футболистов", details: "8 участников • Вт, Чт 18:00" }
                ]
            }
        };

        // Обработчик выбора тренера
        document.querySelectorAll('.trainer-card').forEach(card => {
            card.addEventListener('click', function() {
                const coachId = this.getAttribute('data-coach-id');

                // Убираем выделение у всех карточек
                document.querySelectorAll('.trainer-card').forEach(c => {
                    c.classList.remove('selected');
                });

                // Добавляем выделение текущей карточке
                this.classList.add('selected');

                // Показываем панель профиля
                const profilePanel = document.getElementById('profile-panel');
                profilePanel.classList.add('active');

                // Загружаем данные тренера
                loadCoachProfile(coachId);
            });
        });

        // Обработчик закрытия панели профиля
        document.getElementById('close-profile').addEventListener('click', function(e) {
            e.stopPropagation(); // Предотвращаем всплытие события

            // Скрываем панель профиля
            const profilePanel = document.getElementById('profile-panel');
            profilePanel.classList.remove('active');

            // Снимаем выделение со всех тренеров
            document.querySelectorAll('.trainer-card').forEach(c => {
                c.classList.remove('selected');
            });

            // Сбрасываем состояние панели
            resetProfilePanel();
        });

        // Функция загрузки профиля тренера
        function loadCoachProfile(coachId) {
            const coach = coachesData[coachId];
            if (!coach) return;

            // Скрываем сообщение "Выберите тренера"
            document.getElementById('no-selection').style.display = 'none';

            // Показываем профиль
            const coachProfile = document.getElementById('coach-profile');
            coachProfile.style.display = 'block';

            // Заполняем данные
            document.getElementById('profile-avatar').textContent = coach.initials;
            document.getElementById('profile-name').textContent = coach.name;

            const statusBadge = document.getElementById('profile-status');
            statusBadge.textContent = coach.statusText;
            statusBadge.className = `status-badge status-${coach.status}`;

            document.getElementById('profile-qualification').textContent = coach.qualification;
            document.getElementById('profile-experience').textContent = coach.experience;
            document.getElementById('profile-email').textContent = `Email: ${coach.email}`;
            document.getElementById('profile-phone').textContent = `Телефон: ${coach.phone}`;

            // Заполняем группы
            const groupsContainer = document.getElementById('profile-groups');
            groupsContainer.innerHTML = '';

            coach.groups.forEach(group => {
                const groupElement = document.createElement('div');
                groupElement.className = 'group-item';
                groupElement.innerHTML = `
                    <div class="group-name">${group.name}</div>
                    <div class="group-details">${group.details}</div>
                `;
                groupsContainer.appendChild(groupElement);
            });
        }

        // Функция сброса состояния панели профиля
        function resetProfilePanel() {
            // Показываем сообщение "Выберите тренера"
            document.getElementById('no-selection').style.display = 'flex';

            // Скрываем профиль
            document.getElementById('coach-profile').style.display = 'none';
        }

        // Обработчики фильтров
        document.querySelectorAll('input[type="radio"]').forEach(radio => {
            radio.addEventListener('change', function() {
                filterCoaches();
            });
        });

        // Функция фильтрации тренеров
        function filterCoaches() {
            // Здесь можно добавить логику фильтрации списка тренеров
            // на основе выбранных фильтров
            console.log('Применение фильтров...');
        }
    </script>
}