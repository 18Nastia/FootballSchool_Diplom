<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FootballSchool</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FootballSchool.styles.css" asp-append-version="true" />
    <!-- Подключаем Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    @await RenderSectionAsync("Styles", required: false)
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            background-color: #F9FAFB;
            color: #1F2937;
            display: flex;
            min-height: 100vh;
        }

        .dashboard-container {
            display: flex;
            width: 100%;
            min-height: 100vh;
        }

        .sidebar {
            width: 240px;
            background-color: #FFFFFF;
            border-right: 1px solid #E5E7EB;
            display: flex;
            flex-direction: column;
            position: fixed;
            height: 100vh;
            overflow-y: auto;
        }

        .logo {
            padding: 24px 20px;
            font-size: 18px;
            font-weight: 600;
            color: #2563EB;
            border-bottom: 1px solid #E5E7EB;
        }

        .nav-menu {
            flex: 1;
            padding: 12px 0;
        }

        .nav-item {
            display: flex;
            align-items: center;
            padding: 12px 20px;
            color: #6B7280;
            text-decoration: none;
            transition: all 0.2s;
            font-size: 14px;
        }

            .nav-item:hover {
                background-color: #F3F4F6;
                color: #1F2937;
            }

            .nav-item.active {
                background-color: #EFF6FF;
                color: #2563EB;
                border-left: 3px solid #2563EB;
            }

        .nav-icon {
            width: 20px;
            height: 20px;
            margin-right: 12px;
            text-align: center;
            font-size: 16px;
        }

        .sidebar-footer {
            border-top: 1px solid #E5E7EB;
            padding: 12px 0;
        }

        .main-content {
            margin-left: 240px;
            flex: 1;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .page-header {
            background: linear-gradient(135deg, #2563EB 0%, #1D4ED8 100%);
            padding: 20px 40px;
            width: 100%;
            margin-bottom: 16px;
            height: 75px;
            flex-shrink: 0;
        }

            .page-header h1 {
                color: white;
                font-size: 22px;
                font-weight: 600;
                margin: 0;
            }

        .page-content {
            flex: 1;
            padding: 0 40px 32px 40px;
            width: 100%;
        }

        .page-footer {
            border-top: 1px solid #E5E7EB;
            padding: 32px 40px;
            width: 100%;
            flex-shrink: 0;
            margin-top: auto;
        }

        .footer-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 100%;
            height: 100%;
        }

        .footer-logo {
            font-size: 18px;
            font-weight: 600;
            color: #2563EB;
        }

        .footer-links {
            display: flex;
            gap: 32px;
        }

        .footer-link {
            color: #6B7280;
            text-decoration: none;
            font-size: 15px;
            transition: color 0.2s;
            font-weight: 500;
        }

            .footer-link:hover {
                color: #2563EB;
            }

        .footer-copyright {
            color: #6B7280;
            font-size: 15px;
            font-weight: 500;
        }

        /* Адаптивность */
        @@media (max-width: 768px) {
            .sidebar

        {
            width: 200px;
        }

        .main-content {
            margin-left: 200px;
        }

        .page-header {
            padding: 16px 20px;
        }

        .page-content {
            padding: 0 20px 20px 20px;
        }

        .page-footer {
            padding: 24px 20px;
        }

        .page-header h1 {
            font-size: 20px;
        }

        .footer-content {
            flex-direction: column;
            gap: 20px;
            text-align: center;
        }

        .footer-links {
            gap: 24px;
        }

        .footer-logo {
            font-size: 17px;
        }

        .footer-link,
        .footer-copyright {
            font-size: 14px;
        }

        }

        @@media (max-width: 576px) {
            .sidebar

        {
            width: 60px;
        }

        .main-content {
            margin-left: 60px;
        }

        .page-header {
            padding: 14px 16px;
            margin-bottom: 12px;
        }

        .page-content {
            padding: 0 16px 16px 16px;
        }

        .page-footer {
            padding: 20px 16px;
        }

        .page-header h1 {
            font-size: 18px;
        }

        .footer-links {
            flex-direction: column;
            gap: 16px;
        }

        .footer-logo {
            font-size: 16px;
        }

        .footer-link,
        .footer-copyright {
            font-size: 13px;
        }

        .nav-item span {
            display: none;
        }

        .logo {
            font-size: 16px;
            padding: 16px 12px;
            text-align: center;
        }

        }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <!-- Боковое меню -->
        <aside class="sidebar">
            <div class="logo">FootballSchool</div>

            <nav class="nav-menu">
                <a asp-page="/Main_Pages/Index_Admin" class="nav-item">
                    <i class="fas fa-home nav-icon"></i>
                    <span>Главная</span>
                </a>

                <a asp-page="/GroupsStudents" class="nav-item">
                    <i class="fas fa-users nav-icon"></i>
                    <span>Группы и ученики</span>
                </a>

                <a asp-page="/Attendance" class="nav-item">
                    <i class="fas fa-calendar-check nav-icon"></i>
                    <span>Посещаемость</span>
                </a>

                <a asp-page="/TrainingResults" class="nav-item">
                    <i class="fas fa-chart-line nav-icon"></i>
                    <span>Результаты тренировок</span>
                </a>

                <a asp-page="/ChildProfile" class="nav-item">
                    <i class="fas fa-child nav-icon"></i>
                    <span>Профиль ребёнка</span>
                </a>

                <a asp-page="/CoachProfile" class="nav-item">
                    <i class="fas fa-user-tie nav-icon"></i>
                    <span>Профиль тренера</span>
                </a>

                <a asp-page="/Coaches" class="nav-item">
                    <i class="fas fa-users-cog nav-icon"></i>
                    <span>Список тренеров</span>
                </a>

                <a asp-page="/Branches" class="nav-item">
                    <i class="fas fa-building nav-icon"></i>
                    <span>Филиалы и площадки</span>
                </a>

                <a asp-page="/Schedule" class="nav-item">
                    <i class="fas fa-calendar-alt nav-icon"></i>
                    <span>Расписание</span>
                </a>

                <a asp-page="/Subscriptions" class="nav-item">
                    <i class="fas fa-id-card nav-icon"></i>
                    <span>Абонементы</span>
                </a>

                <a asp-page="/Payments" class="nav-item">
                    <i class="fas fa-credit-card nav-icon"></i>
                    <span>Платежи</span>
                </a>
            </nav>

            <div class="sidebar-footer">
                <a asp-page="/Settings" class="nav-item">
                    <i class="fas fa-cog nav-icon"></i>
                    <span>Настройки</span>
                </a>
            </div>
        </aside>

        <!-- Основной контент -->
        <main class="main-content">
            <div class="page-header">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="page-content">
                @RenderBody()
            </div>

            <!-- Подвал -->
            <footer class="page-footer">
                <div class="footer-content">
                    <div class="footer-logo">FootballSchool</div>
                    <div class="footer-links">
                        <a href="#" class="footer-link">О нас</a>
                        <a href="#" class="footer-link">Контакты</a>
                        <a href="#" class="footer-link">Политика конфиденциальности</a>
                        <a href="#" class="footer-link">Условия использования</a>
                    </div>
                    <div class="footer-copyright">
                        &copy; 2025 FootballSchool.
                    </div>
                </div>
            </footer>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>