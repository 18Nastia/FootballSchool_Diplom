<script>
    // Tab switching functionality
    document.addEventListener('DOMContentLoaded', function() {
        const tabs = document.querySelectorAll('.tab');
        const groupsView = document.getElementById('groupsView');
        const studentsView = document.getElementById('studentsView');
        const addButton = document.getElementById('addButton');

        tabs.forEach(tab => {
            tab.addEventListener('click', function() {
                // Remove active class from all tabs
                tabs.forEach(t => t.classList.remove('active'));

                // Add active class to clicked tab
                this.classList.add('active');

                // Show/hide views based on data-view attribute
                const view = this.getAttribute('data-view');
                if (view === 'groups') {
                    groupsView.style.display = 'block';
                    studentsView.style.display = 'none';
                    addButton.innerHTML = '<i class="fas fa-plus"></i> Добавить группу';
                } else {
                    groupsView.style.display = 'none';
                    studentsView.style.display = 'block';
                    addButton.innerHTML = '<i class="fas fa-plus"></i> Добавить ученика';
                }
            });
        });

        // Add button functionality
        addButton.addEventListener('click', function() {
            const activeTab = document.querySelector('.tab.active');
            if (activeTab.getAttribute('data-view') === 'groups') {
                alert('Добавление новой группы');
            } else {
                alert('Добавление нового ученика');
            }
        });

        // Edit button functionality
        document.querySelectorAll('.edit-button, .edit-btn').forEach(button => {
            button.addEventListener('click', function(e) {
                e.stopPropagation();
                alert('Редактирование');
            });
        });

        // View button functionality
        document.querySelectorAll('.view-button').forEach(button => {
            button.addEventListener('click', function() {
                const card = this.closest('.card');
                const groupName = card.querySelector('.card-title').textContent;
                alert(`Просмотр учеников группы: ${groupName}`);
            });
        });
    });
</script>