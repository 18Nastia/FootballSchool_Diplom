@section Scripts {
    <script>
        // Переключение между вкладками
        document.querySelectorAll('.tab-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                // Убираем активный класс у всех кнопок
                document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
                // Добавляем активный класс текущей кнопке
                this.classList.add('active');

                // Скрываем все секции
                document.querySelectorAll('.schedule-section, .results-section, .comments-section, .achievements-section').forEach(section => {
                    section.classList.remove('active');
                });

                // Показываем нужную секцию
                const tabName = this.getAttribute('data-tab');
                document.getElementById(tabName + '-section').classList.add('active');
            });
        });

        // Обработчик для кнопки "Показать меньше/больше"
        document.querySelector('.show-more-btn').addEventListener('click', function() {
            const comments = document.querySelectorAll('.comment-card');
            const isExpanded = this.textContent === 'Показать меньше';

            if (isExpanded) {
                comments.forEach((comment, index) => {
                    if (index > 1) {
                        comment.style.display = 'none';
                    }
                });
                this.textContent = 'Показать больше';
            } else {
                comments.forEach(comment => {
                    comment.style.display = 'block';
                });
                this.textContent = 'Показать меньше';
            }
        });

        // Инициализация - скрываем все комментарии кроме первых двух
        document.addEventListener('DOMContentLoaded', function() {
            const comments = document.querySelectorAll('.comment-card');
            comments.forEach((comment, index) => {
                if (index > 1) {
                    comment.style.display = 'none';
                }
            });
        });
    </script>
}