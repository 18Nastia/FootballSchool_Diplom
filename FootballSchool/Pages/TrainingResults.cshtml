<script>
    function toggleSidebar() {
        const sidebar = document.getElementById('rightSidebar');
        const toggleBtn = document.querySelector('.toggle-sidebar-btn');

        sidebar.classList.toggle('open');
        toggleBtn.classList.toggle('open');
    }

    function addResult(studentName) {
        alert(`Добавление результата для ученика: ${studentName}`);
        // Здесь можно добавить логику предзаполнения формы данными ученика
    }

    function saveResult() {
        const testType = document.getElementById('testType').value;
        const testDate = document.getElementById('testDate').value;
        const testResult = document.getElementById('testResult').value;
        const resultUnit = document.getElementById('resultUnit').value;
        const testNotes = document.getElementById('testNotes').value;

        if (!testResult) {
            alert('Пожалуйста, введите результат теста');
            return;
        }

        // Здесь будет логика сохранения результата
        console.log('Сохранение результата:', {
            testType,
            testDate,
            testResult,
            resultUnit,
            testNotes
        });

        alert('Результат успешно сохранен!');
        clearForm();
    }

    function saveComments() {
        const comments = document.getElementById('coachComments').value;

        if (!comments) {
            alert('Пожалуйста, введите комментарий');
            return;
        }

        // Здесь будет логика сохранения комментария
        console.log('Сохранение комментария:', comments);
        alert('Комментарий успешно сохранен!');
        document.getElementById('coachComments').value = '';
    }

    function clearForm() {
        document.getElementById('testType').value = 'Скорость';
        document.getElementById('testDate').value = new Date().toISOString().split('T')[0];
        document.getElementById('testResult').value = '';
        document.getElementById('resultUnit').value = 'сек';
        document.getElementById('testNotes').value = '';
    }

    // Обработчик изменения типа графика
    document.getElementById('chartType').addEventListener('change', function() {
        const chartType = this.value;
        console.log('Изменен тип графика:', chartType);
        // Здесь можно обновить данные графика
    });

    // Обработчик кнопки добавления результата
    document.getElementById('addResultBtn').addEventListener('click', function() {
        clearForm();
        // Открываем панель при нажатии на кнопку добавления
        toggleSidebar();
    });

    // Закрытие панели при нажатии на Escape
    document.addEventListener('keydown', function(event) {
        if (event.key === 'Escape') {
            const sidebar = document.getElementById('rightSidebar');
            if (sidebar.classList.contains('open')) {
                toggleSidebar();
            }
        }
    });
</script>